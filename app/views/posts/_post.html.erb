<div id="<%= dom_id post %>">
  <p>
    <strong>Nombre:</strong>
    <%= post.user.name %>
  </p>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
  <p>
    <strong>Image:</strong>
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "img-fluid" %>
    <% else %>
      No image attached.
    <% end %>
  </p>
  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>
</div>

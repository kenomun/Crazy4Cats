<h1>Publicaciones</h1>
<% if user_signed_in? %>
  <% if user_signed_in? %>
    <%= link_to "Crear Publicación", new_post_path, class: "btn btn-primary" %>
  <% end %>
<% end %>
<div id="posts" class="mt-3">
  <% @posts.each_with_index do |post, index| %>
    <div class="container mt-3">
      <div class="row justify-content-center">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h6 class="card-title"><%= post.user.name %></h6>
              <h5 class="card-title"><%= post.title %></h5>
              <div class="text-center">
                <% if post.image.attached? %>
                  <%= image_tag post.image, class: "img-fluid", style: "max-height: 200px; width: 100%;" %>
                <% end %>
              </div>
              <div class="text-center">
                <%= link_to "Ver Publicación ...", post, class: "btn" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% if index == @posts.size - 1 %>
      <style>
        .mt-3:last-child {
          margin-bottom: 100px; /* Ajusta el margen inferior según tus necesidades */
        }
      </style>
    <% end %>
  <% end %>
</div>

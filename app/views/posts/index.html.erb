<div id="posts" class="mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <% if user_signed_in? %>
        <% if user_signed_in? %>
          <%= link_to "Crear Publicación", new_post_path, class:"btn btn-color" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <% @posts.each_with_index do |post, index| %>
    <div class="container mt-3">
      <div class="row justify-content-center">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <% if post.user.profile_image.attached? %>
                  <%= image_tag post.user.profile_image, class: "img-fluid profile-image rounded-image m-1" %>
                <% else %>
                  <%= image_tag "default_profile_image.png", class: "rounded-image" %>
                <% end %>
                <h6 class="card-name"><%= post.user.name %></h6>
              </div>
              <h5 class="card-title"><%= post.title %></h5>
              <div class="text-center">
                <% if post.image.attached? %>
                  <%= image_tag post.image, class: "img-fluid", style: "max-height: 200px; width: 100%;" %>
                <% end %>
              </div>
              <p class="mt-3"><%= post.content %></p>
              <div class="text-center">
                <%= link_to "Ver Publicación ...", post, class: "btn" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
